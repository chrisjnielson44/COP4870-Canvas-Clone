<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="COP4870_Canvas_Clone.AddModulesPage"
             Title="Add Module to Course">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            <!-- Course Selection -->
            <Label Text="Select Course" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>
           <Picker x:Name="CoursePicker">
        <!-- ItemsSource set in code-behind -->
    </Picker>


            <!-- Module Title Entry -->
            <Entry x:Name="ModuleNameEntry" Placeholder="Module Title" />

            <!-- Add Module Button -->
            <Button Text="Add Module" Clicked="OnAddModuleClicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>