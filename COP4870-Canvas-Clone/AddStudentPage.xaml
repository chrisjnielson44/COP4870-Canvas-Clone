<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="COP4870_Canvas_Clone.AddStudentPage"
             Title="Add Student"
                      >

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">

            <Label Text="Enter Student Details" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

            <!-- Student Name Entry -->
            <Entry x:Name="StudentNameEntry" Placeholder="Student Name" FontSize="18" />

            <!-- Student Email Entry -->
            <Entry x:Name="StudentEmailEntry" Placeholder="Student Email" FontSize="18" Keyboard="Email"/>

            <!-- Add Button -->
            <Button Text="Add Student"
                    BackgroundColor="Blue"
                    TextColor="White"
                    FontAttributes="Bold"
                    Clicked="OnAddStudentClicked"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
